#!/usr/bin/env node

var program = require('commander');
var chalk = require('chalk');
var shell = require('shelljs');
var fs = require('fs');
var fse = require('fs-extra');

program
  .version('0.0.1');

program
  .command('mixin [name]')
  .description(chalk.gray('    # create mixin file'))
  .action(function (name, options) {
    console.log(name)
  });

program
  .command('store [moduleName]')
  .description(chalk.gray('    # create module file for store'))
  .action(function (moduleName, options) {
    console.log(moduleName)
  });

program
  .command('directive [name]')
  .description(chalk.gray('    # create directive file'))
  .action(function (name, options) {
    console.log(name)
  });

program
  .command('view [path]')
  .description(chalk.gray('    # create view file'))
  .action(function (path, options) {
    shell.cp('./bin/vue-make', './bin/v')
  });

program
  .command('component [name]')
  .description(chalk.gray('    # create component file'))
  .action(function (name, options) {
    fse.copy(`${__dirname}/../templates/component/[componentName]`, `./src/components/${name}`).then(() => {
      fs.readFile(`./src/components/${name}/index.vue`, 'utf8', function (err, data) {
        fs.writeFile(`./src/components/${name}/index.vue`, data.split('[componentName]').join(name), 'utf8', function (err) {
           if (err) return console.log(err);
        });
      });
      fs.readFile(`./src/components/${name}/style.scss`, 'utf8', function (err, data) {
        fs.writeFile(`./src/components/${name}/style.scss`, data.split('[componentName]').join(name), 'utf8', function (err) {
           if (err) return console.log(err);
        });
      });
    })
  });

// program
//   .command('*')
//   .action(function (name, options) {
//     console.log(name, options)
//   });

program.on('--help', function(){
  console.log();
  console.log('  Examples:');
  console.log();
  console.log('    $ vue-make --help');
  console.log('    $ vue-make -h');
});

program.parse(process.argv);
